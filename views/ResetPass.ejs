<!DOCTYPE html>
<html>

<head>
    <title>IT Hardware</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css">

    <style>
        body {
            background-color: white;
            height: 100%;
            padding: 0;
            margin: 0;
            overflow-x: hidden;
        }


        ul {
            text-align: center;
            list-style-type: none;
            margin: 0;
            padding-top: 30px;
            overflow: hidden;
            background-color:darkcyan;
            height: 80px;
            width: 100%;
            padding-right: 50px;

        }

        li {
            float: left;
            color: darkgoldenrod;
            margin-left: 100px;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover {
            background-color: transparent;
            color: #CCAE93;
        }

        #banner {
            background-color:white;
        }

        #bannerlogo {
            text-align: center;
            padding: 40px 515px;
        }

        #case {
            background-color: #F1EAE8;
            padding: 16px;
        }
        #contactdetails{
            padding: 20px;
            padding-bottom: 100px;
        }

        #contactus h1 {
            padding-left: 500px;
            width: 70%;
            color: #534745;
        }
        .ForgetPass{
            padding-left: 500px;
            width: 70%;
            color: #534745;

        }
        .ForgetPass p{
            padding-left: 10px;
            width: 70%;
            color: #534745;

        }
        #About {
            padding: 16px;
        }

        #About h2,
        p {
            padding-left: 175px;
            width: 70%;
            color: #534745;
        }

        #footer {
            background-color: darkcyan;
            margin-top: 10px;
            padding: 10px;
            position:relative;
            bottom: 0;
            width: 100%;
        }
        #footer p{
           color: white;
        }

        #contact {
            margin: 0;
            overflow: hidden;
            background-color: darkcyan;
            width: 100%;
            color: #CCAE93;
             padding-left: 10px; 

        }
     #copyright {
            margin: 0;
            overflow: hidden;
            background-color: darkcyan;
            width: 100%;
            color: #CCAE93;
            padding-top: 100px;
            padding-left: 150px;
        }

        #service {
            margin: 0;
            overflow: hidden;
            background-color: darkcyan;
            color: #CCAE93;
            padding-right: 150px; 
        }
     
        #footer-flex {
            display: flex;
        }
        #contactinfo {
            display: flex;
        }

        #footer obj-cont {
            flex: 1;
        }
  
          #contact-flex p {
            padding-bottom: 10px;
            padding-left: 20px;
        }
        #footer img-cont {
            flex:1;
        }
     
    </style>


</head>

<body>
    <%- include('./partials/head'); %>

    
    <section class="ForgetPass" id="app">
        <h1>Forget Password</h1>
        <div style="height:50px;background-color:#F8D7DA;width:500px !important;margin-bottom:5px;" v-if="message">
            <p  style="color:black;margin-top:5px;">{{message}}</p>
        </div>
            <form  >
                <label for="email">Email:</label>
                <input type="text" id="email" name="email" v-model="user.email" v-validate="'required|email'"><br><br>
                <span class="txt-danger" v-if="errors.has('email')">{{ errors.first('email') }}</span><br>

                <label for="dob">DOB:</label>
                <input type="date" id="dob" name="dob" v-model="user.dob" v-validate="'required'"><br><br>
                <span class="txt-danger" v-if="errors.has('dob')">Date Of Birth field required.</span><br>

                <input type="submit" value="Reset" @click.prevent="onClickedReset">

            </form>
           
        <p>Check the link sent to your email</p>
    </section>

    <%- include('./partials/footer'); %>

    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vee-validate@<3.0.0/dist/vee-validate.js"></script>
    <script src="js/reset_pass.js"></script>
</body>

</html>