    <%- include('./partials/head'); %>
    
    <section class="loginform" id="app">
        <h1>Login</h1>
        <div style="height:50px;background-color:#F8D7DA;width:500px !important;margin-bottom:5px;" v-if="message">
            <p  style="color:black;margin-top:5px;">{{message}}</p>
        </div>
        <form id="app">
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" v-model="user.email" v-validate="'required|email'"><br><br>
            <span class="txt-danger" v-if="errors.has('email')">{{ errors.first('email') }}</span><br>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" v-model="user.password"><br><br>
            <input type="submit" value="Login"  @click.prevent="login">
           
        </form>
        <a href="/register"><input type="submit" value="Register"></a><br>
        <a href="/resetpass"><input type="submit" value="Forget Password?"></a>
