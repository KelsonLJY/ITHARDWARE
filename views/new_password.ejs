    <section class="ForgetPass" id="app">
        <h1>Forget Password</h1>
        <div style="height:50px;background-color:#F8D7DA;width:500px !important;margin-bottom:5px;" v-if="message">
            <p  style="color:black;margin-top:5px;">{{message}}</p>
        </div>
            <form  >
                <label for="password">Password:</label>
            <input type="password" id="password" name="password"  v-model="user.password" v-validate="'required'" ref="password">
            <span v-show="errors.has('password')" class="txt-danger">{{ errors.first('password') }}</span>
            <br><br>

            <label for="confirmpass">Confirm Password:</label>
            <input type="password" id="confirmpass" v-validate="'required|confirmed:password'" name="password_confirmation" v-model="user.confirm_password" v-validate="'required'" data-vv-as="password">
            <span v-show="errors.has('password_confirmation')" class="txt-danger">{{ errors.first('password_confirmation') }}</span>
            <br><br>

                <input type="submit" value="Update" @click.prevent="onClickedUpdatePassword">

            </form>
           
        <p>Check the link sent to your email</p>
    </section>

