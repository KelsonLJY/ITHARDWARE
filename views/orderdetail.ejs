<!DOCTYPE html>
<html>

<head>
    <title>IT Hardware</title>

    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <style>
        body {
            background-color: white;
            height: 100%;
            padding: 0;
            margin: 0;
            overflow-x: hidden;
        }


        ul {
            text-align: center;
            list-style-type: none;
            margin: 0;
            padding-top: 30px;
            overflow: hidden;
            background-color:darkcyan;
            height: 80px;
            width: 100%;
            padding-right: 50px;

        }

        li {
            float: left;
            color: darkgoldenrod;
            margin-left: 100px;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        li a:hover {
            background-color: transparent;
            color: #CCAE93;
        }

        #banner {
            background-color:white;
        }

        #bannerlogo {
            text-align: center;
            padding: 40px 515px;
        }

        #case {
            background-color: #F1EAE8;
            padding: 16px;
        }

        #case h2,
        p {
            padding-left: 175px;
            width: 70%;
            color: #534745;
        }
        #cart {
            padding: 16px;
        }

        #About h2,
        p {
            padding-left: 175px;
            width: 70%;
            color: #534745;
        }

        #footer {
            background-color: darkcyan;
            margin-top: 10px;
            padding: 10px;
            position: relative;
        }
        #footer p{
           color: white;
        }

        #contact {
            margin: 0;
            overflow: hidden;
            background-color: darkcyan;
            width: 100%;
            color: #CCAE93;
             padding-left: 10px; 

        }
     #copyright {
            margin: 0;
            overflow: hidden;
            background-color: darkcyan;
            width: 100%;
            color: #CCAE93;
            padding-top: 100px;
            padding-left: 150px;
        }
   
        #service {
            margin: 0;
            overflow: hidden;
            background-color: darkcyan;
            color: #CCAE93;
            padding-right: 150px; 
        }
     
        #footer-flex {
            display: flex;
        }

        #footer obj-cont {
            flex: 1;
        }
  
          #contact-flex p {
            padding-bottom: 10px;
            padding-left: 20px;
        }
        #footer img-cont {
            flex:1;
        }
      
     
    </style>


</head>

<body>
    <%- include('./partials/head'); %>

    <section>
    
    
        <div id="cart">
       
            <section id="ViewCart">
              
                <h2>Order Details</h2>
                   
                <table>
                    <tr>
                        
                        <td colspan="2"><span style="color:blue;font-size:24px;font-weight: bold;">Order No :   {{order._id}}
                        </td>
                    </tr>
                    <tr>
                        
                        <td colspan="2">
                            <span>Order Date : {{formatDate(order.order_date)}}</span><br>
                            <span>Delivery On : {{formatDate(order.delivery_date)}}</span><br>
                        </td>
                    </tr>
                    <tr v-for="(detail, index) in order.details">
                        
                        <td><img :src="detail.item.img_url" width="100px" height="100px" ></td>
                        <td>{{detail.item.descriptions}}<br>
                            <span>Price : ${{detail.price}}</span><br>
                            <span>Qty : {{detail.qty}}</span><br>
                            <span>Amount : {{detail.amount}}</span>

                        </td>
                    </tr>
                    <tr>
                        <td colspan="2"><hr/></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td>
                            <span style="font-weight: bold;">Total : ${{order.total}}</span><br>
                            <span style="font-weight: bold;">Delivery Fee : ${{order.delivery_fee}}</span><br> 
                            <span style="font-weight: bold;">Net Amount : ${{ +order.total + +order.delivery_fee}}</span><br>
                        </td>
                    </tr>
                </table>
            </section>
        </div>
    </section>
    <%- include('./partials/footer'); %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vee-validate@<3.0.0/dist/vee-validate.js"></script>

    
    <script src="js/orderdetail.js"></script>
</body>

</html>